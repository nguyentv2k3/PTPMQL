@model Baithuchanh.Models.HoaDonModel

<h2>Tính tiền hóa đơn</h2>

<form asp-action="Index" method="post">
    <div>
        <label>Số lượng:</label>
        <input asp-for="SoLuong" type="number" min="1" required />
    </div>
    <div>
        <label>Đơn giá:</label>
        <input asp-for="DonGia" type="number" step="0.01" min="0" required />
    </div>
    <button type="submit">Tính tiền</button>
</form>

@if (ViewBag.ThongBao != null)
{
    <p>@ViewBag.ThongBao</p>
}
