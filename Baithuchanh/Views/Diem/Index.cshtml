@model Baithuchanh.Models.DiemModel

<h2>Tính điểm tổng kết môn học</h2>

<form asp-action="Index" method="post">
    <div>
        <label>Điểm thành phần A:</label>
        <input asp-for="DiemA" type="number" step="0.01" min="0" max="10" required />
    </div>
    <div>
        <label>Điểm thành phần B:</label>
        <input asp-for="DiemB" type="number" step="0.01" min="0" max="10" required />
    </div>
    <div>
        <label>Điểm thành phần C:</label>
        <input asp-for="DiemC" type="number" step="0.01" min="0" max="10" required />
    </div>
    <button type="submit">Tính điểm tổng kết</button>
</form>

@if (ViewBag.ThongBao != null)
{
    <p>@ViewBag.ThongBao</p>
}
